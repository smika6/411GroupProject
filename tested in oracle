--create people table
CREATE TABLE p(
person_id INTEGER,
person_name VARCHAR(20),
PRIMARY KEY (person_ID)
);

--create employee table
CREATE TABLE employee(
employee_ID INTEGER,
employee_name VARCHAR(20),
PRIMARY KEY (employee_ID)
);

--create address table
CREATE TABLE address(
street_address VARCHAR(30),
city VARCHAR(30),
lives_in_state VARCHAR(30),
PRIMARY KEY(street_address, city, lives_in_state)
);

--create lives_at table
CREATE TABLE lives_at(
person_id INTEGER,
street_address VARCHAR(30),
city VARCHAR(30),
lives_in_state VARCHAR(30),
PRIMARY KEY(person_id, street_address, city, lives_in_state)
);

